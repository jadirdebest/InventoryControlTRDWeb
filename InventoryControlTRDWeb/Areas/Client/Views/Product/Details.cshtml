@model InventoryControlTRDWeb.Application.Dto.ProductDto

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}


<h4>Detalhes do Produto</h4>
<hr />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nome")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Preço de Custo")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CostPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Preço de Venda")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SalePrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Tipo")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Ativo")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Actived)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new {  id = Model.Id  }) |
    <a asp-action="List" asp-controller="Product">Voltar</a>
</div>
