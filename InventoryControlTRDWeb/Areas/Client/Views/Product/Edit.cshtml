@model InventoryControlTRDWeb.Areas.Client.Models.ProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h4>Editar Produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" class="form-control" />

            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="Name" class="form-control form-control-sm" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Preço de Custo</label>
                <input asp-for="CostPrice" class="form-control form-control-sm" />
                <span asp-validation-for="CostPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Preço de Venda</label>
                <input asp-for="SalePrice" class="form-control form-control-sm" />
                <span asp-validation-for="SalePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Unidade de Medida</label>
                <select asp-for="Type" class="form-control form-control-sm">
                    <option value="1">UN</option>
                    <option value="2">PCT</option>
                    <option value="3">PESO</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Active" /> @Html.DisplayName("Ativo")
                </label>
            </div>

            @if (Model.Composite)
            {
                <div class="form-group">
                    @Html.ActionLink("Add SubProduto", "Add", "SubProduct", new { idProduct = Model.Id }, new { @class = "btn btn-primary btn-sm" })
                </div>
            }

            <button type="submit" class="btn btn-sm btn-primary">Salvar</button>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="List" asp-controller="Product">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
    $(document).ready(() => {
        $('#CostPrice').mask("#.##0,00", { reverse: true })
        $('#SalePrice').mask("#.##0,00", { reverse: true })
    });
</script>