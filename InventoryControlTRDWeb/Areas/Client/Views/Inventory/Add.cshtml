@model InventoryControlTRDWeb.Areas.Client.Models.InventoryViewModel

@{
    ViewData["Title"] = "Lançamento de Estoque";
    Layout = "_Layout";
}

<h4>Lançar Estoque</h4>
<hr />

@if (ViewBag.Info != null)
{
    <p class="alert alert-warning">@ViewBag.Info</p>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label>Selecione o Produto</label>
                <select asp-for="ProductId" class="form-control form-control-sm">
                    @foreach (var product in Model.SimpleProductList)
                    {
                        <option value="@product.Id">@product.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" min="0" class="form-control form-control-sm" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Min" class="control-label"></label>
                <input asp-for="Min" class="form-control form-control-sm" />
                <span asp-validation-for="Min" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Max" class="control-label"></label>
                <input asp-for="Max" class="form-control form-control-sm" />
                <span asp-validation-for="Max" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" asp-controller="Inventory">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
